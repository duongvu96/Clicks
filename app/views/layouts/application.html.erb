<!DOCTYPE html>
<html>
<head>
  <title>10 SECS TO SAVE YOUR LIFE</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script>
    $(document).ready(function() {
      var count = 0;
      var summary = "";
      var startTimer = function(duration, display) {
          var timer = duration;
          var seconds = duration;
          setInterval(function() {
              if (seconds == 0) {
                $("#count-btn").hide();
                $("#title").hide();
                $("#message").show();
                // display.text("Pretty good");
                summary = "I%20was%20saved%20from%20death%20with%20" + $("#counter").text() + "%20clicks.%20Try%20and%20beat%20me!"
                $("#share").show();
                return;
              }
              seconds = seconds-1;
              if (seconds >= 10)
                display.text("0:"+ seconds);
              else
                display.text("0:0" + seconds);
              
          }, 1000);
      }
    
      $("#start-btn").on("click", function() {
        $("#start-btn").hide();
        $("#prompt").hide();
        $("#game").show();
        startTimer(10,$("#timer"));
      });
      
      var incrCount = function(display) {
        count = count+1;
        display.text(count + " clicks so far");
      }
      
      $("#count-btn").on("click", function() {
        incrCount($("#counter"));
      })
      
      $("#share").on("click", function() {
        window.location.href = "http://www.facebook.com/sharer.php?s=100&p[title]=10%20Seconds%20To%Save%20Your%20Life&p[url]=stormy-wildwood-97564.herokuapp.com&p[summary]=" + summary;
      })
    })
  </script>
  
